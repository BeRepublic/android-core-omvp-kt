<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="hintType">
        <flag name="none" value="0" />
        <flag name="fixed" value="1" />
        <flag name="fixedToLeft" value="2" />
    </attr>

    <declare-styleable name="InputLayoutView">
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:gravity" />
        <attr name="android:imeOptions" />
        <attr name="android:nextFocusForward" />
        <attr name="android:nextFocusUp" />
        <attr name="android:nextFocusDown" />
        <attr name="android:nextFocusRight" />
        <attr name="android:nextFocusLeft" />
        <attr name="android:maxLength" />
        <attr name="android:inputType"/>
        <attr name="android:enabled" />
        <attr name="android:focusable" />
        <attr name="android:maxLines"/>
        <attr name="passwordToggleEnabled" />
        <attr name="hintAnimationEnabled" />
        <attr name="hintType" />
        <attr name="hintWidth" format="dimension"/>
        <attr name="counterEnabled" />
        <attr name="counterMaxLength" />
        <attr name="mask" format="string" />
        <attr name="notMaskedSymbol" format="string" />
        <attr name="editable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PagerIndicator">
        <attr name="pi_width" format="dimension"/>
        <attr name="pi_height" format="dimension"/>
        <attr name="pi_margin" format="dimension"/>
        <attr name="pi_animator" format="reference"/>
        <attr name="pi_animator_reverse" format="reference"/>
        <attr name="pi_drawable" format="reference"/>
        <attr name="pi_drawable_unselected" format="reference"/>

        <attr name="pi_orientation" format="enum">
            <!-- Defines an horizontal widget. -->
            <enum name="horizontal" value="0"/>
            <!-- Defines a vertical widget. -->
            <enum name="vertical" value="1"/>
        </attr>

        <attr name="pi_gravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>

    </declare-styleable>

</resources>
